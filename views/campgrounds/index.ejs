<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<% for (let campground of campgrounds){%>
<!-- making row cards -->
<div class="card mb-3">
    <!-- the content of the card become horizontal instead of vertical -->
    <div class="row">
        <!-- take 1/3 part container on the left side for the picture -->
        <!-- col = coloumn, md = medium breakpoint for responsive container, 4 is 4/12, the col size -->
        <div class="col-md-4">
            <% if(campground.images.length) {%>
            <img class="img-fluid" src="<%= campground.images[0].url %> " alt="image of picture">
            <% }else { %>
            <img class="img-fluid"
                src="https://res.cloudinary.com/dd5yl51lm/image/upload/v1655368274/YelpCamp/sewe4w79dkexptqgqrbq.jpg"
                alt="image of picture">
            <% } %>
        </div>
        <!-- take 2/3 part container for the content -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %> </p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a href="/campgrounds/<%= campground.id %> " class="btn btn-primary">More</a>
            </div>
        </div>
    </div>
</div>
<% }%>